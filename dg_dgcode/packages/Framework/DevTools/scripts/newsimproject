#!/usr/bin/env python3
from __future__ import print_function
import sys,os
import Core.System

def usage(ec=0):
    print("Usage:")
    print()
    print("  %s [-h|--help] ProjectName"%os.path.basename(sys.argv[0]))
    print()
    print("Creates, and populates with skeleton code, new packages for a")
    print("simulation project under packages/Projects/<ProjectName>/")
    sys.exit(ec)

args=sys.argv[1:]
if '-h' in args or '--help' in args:
    usage(0)
if len(args)!=1:
    usage(1)

ec=Core.System.system('ess_devtools_copyskeleton Examples/Skeletons/SkeletonSP Projects %s'%Core.System.quote(args[0]))
sys.exit(ec)
